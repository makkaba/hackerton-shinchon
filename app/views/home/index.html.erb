


<div class="container">
    <div class="row">
      <% @posts.each do |p|%>
          <div class="col-md-4">
              <div class="panel panel-default">
                  <div class="panel-body">
                    <div class="image-frame">
                      <%= image_tag p.img_url%>
                      <!-- <img src="http://imgmr.com/wp-content/uploads/2016/02/pokemon-4-1200x0.jpg" style="width:100%;"></img> -->
                      
                    </div>
                    <h2><%= p.title%></h2>
                    <%= p.content %></br>
                    게시자:<%= p.user.email %></br>

                    좋아요:80 댓글:20
                    <i class="fa fa-star" aria-hidden="true" style="color:yellow;"></i>
                    <i class="fa fa-star" aria-hidden="true" style="color:yellow;"></i>
                    <i class="fa fa-star" aria-hidden="true" style="color:yellow;"></i>
                    <i class="fa fa-star" aria-hidden="true" style="color:yellow;"></i>
                    </br>
                    <a href="/detail/<%= p.id %>" class="btn btn-primary">자세히</a>
                    <a href="<%= p.server_url %>" class="btn btn-danger" target="_blank">새창</a>
                  </div>
            </div>
          </div>
        <% end %>
    </div>
</div>